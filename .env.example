# Risk management: Stop loss and profit targets
STOP_LOSS_PCT=0.01    # 1% stop loss - protects against major losses
TARGET_PCT=0.03       # 3% profit target - realistic expectations

# Trading limits: Prevents overtrading
DAILY_TRADES_LIMIT=5  # Max trades per day
MIN_CONFIDENCE=50.0    # Minimum strategy confidence to execute

# ===============================================
# LEVERAGE & MARGIN SETTINGS
# ===============================================
# Leverage: Higher = more profit potential but more risk
# 30x = Balanced | 50x = Aggressive | 20x = Conservative
DEFAULT_LEVERAGE=50.0
MAX_LEVERAGE=100.0

# Liquidation protection: Buffer to prevent surprise liquidations
LIQUIDATE_BUFFER_PCT=0.30    # 30% buffer from liquidation price

# ===============================================
# PORTFOLIO RISK MANAGEMENT
# ===============================================
# Maximum positions: How many trades can be open simultaneously
# 2 = Focused trading | 3 = Diversified | 1 = Ultra conservative
MAX_POSITIONS_OPEN=2

# Portfolio risk limits: Prevents over-exposure across all positions
MAX_PORTFOLIO_RISK_PCT=80.0    # No new trades when portfolio risk > 80%

# ===============================================
# EMERGENCY RISK THRESHOLDS
# ===============================================
# These are last-resort safety measures to prevent major losses
EMERGENCY_CLOSE_MARGIN_PCT=95.0    # Force close at 95% margin usage (near liquidation)
EMERGENCY_CLOSE_LOSS_PCT=15.0      # Force close at 15% portfolio loss
EMERGENCY_CLOSE_TIME_HOURS=48.0    # Force close after 48 hours (prevent stale positions)

# Risk level alerts: System will send notifications at these levels
CRITICAL_RISK_MARGIN_PCT=90.0      # Critical alert at 90% margin usage
HIGH_RISK_MARGIN_PCT=80.0          # High risk alert at 80% margin usage
MEDIUM_RISK_MARGIN_PCT=70.0        # Medium risk alert at 70% margin usage

# ===============================================
# TRADING FEE SETTINGS
