# Professional Algorithmic Trading System Configuration
# Copy this file to .env and edit values

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
MONGODB_URI=mongodb://localhost:27017 # MongoDB connection URI
DATABASE_NAME=trading_system # Name of the database to use
MONGODB_TIMEOUT=5 # Timeout for MongoDB operations in seconds

# ===============================================
# TRADING CONFIGURATION
# ===============================================
INITIAL_BALANCE=100.0 # Initial balance for the trading system (Recommended: 100 for small accounts)
BALANCE_PER_TRADE_PCT=0.20 # Normal mode: 20% of balance per trade
SAFE_BALANCE_PER_TRADE_PCT=0.05 # Safe mode: 5% of balance per trade (Recommended for 100 balance)
STOP_LOSS_PCT=0.05 # This is the percentage of the trade amount to set as stop loss
TARGET_PCT=0.10 # This is the percentage of the trade amount to set as target profit
DAILY_TRADES_LIMIT=50 # Maximum number of trades allowed per day
MIN_CONFIDENCE=50.0 # Minimum confidence level required to execute a trade

# ===============================================
# MARGIN AND LEVERAGE SETTINGS
# ===============================================
DEFAULT_LEVERAGE=50.0 # Default leverage used (50x for crypto futures)
MAX_LEVERAGE=50.0 # Maximum leverage allowed for trading
LIQUIDATION_BUFFER_PCT=0.30 # 30% buffer from liquidation price for safety
MAX_POSITIONS_OPEN=3 # Maximum number of positions open simultaneously

# ===============================================  
# EMERGENCY CLOSE RISK THRESHOLDS (Configurable)
# ===============================================
EMERGENCY_CLOSE_MARGIN_PCT=95.0 # Emergency close when margin usage exceeds this %
EMERGENCY_CLOSE_LOSS_PCT=15.0 # Emergency close when loss exceeds this %
EMERGENCY_CLOSE_TIME_HOURS=48.0 # Emergency close after holding for this many hours

# ===============================================
# RISK LEVEL THRESHOLDS (Configurable)
# ===============================================
# Critical Risk Level
CRITICAL_RISK_MARGIN_PCT=90.0 # Critical risk when margin usage exceeds this %
CRITICAL_RISK_LOSS_PCT=12.0 # Critical risk when loss exceeds this %
CRITICAL_RISK_TIME_HOURS=36.0 # Critical risk after holding for this many hours

# High Risk Level  
HIGH_RISK_MARGIN_PCT=80.0 # High risk when margin usage exceeds this %
HIGH_RISK_LOSS_PCT=8.0 # High risk when loss exceeds this %
HIGH_RISK_TIME_HOURS=24.0 # High risk after holding for this many hours

# Medium Risk Level
MEDIUM_RISK_MARGIN_PCT=70.0 # Medium risk when margin usage exceeds this %
MEDIUM_RISK_LOSS_PCT=5.0 # Medium risk when loss exceeds this %
MEDIUM_RISK_TIME_HOURS=12.0 # Medium risk after holding for this many hours

# Portfolio Risk Management
MAX_PORTFOLIO_RISK_PCT=15.0 # Maximum overall portfolio risk percentage

# ===============================================
# TRADING FEE SETTINGS
# ===============================================
TRADING_FEE_PCT=0.001 # Percentage of the trade amount charged as trading fee
EXIT_FEE_MULTIPLIER=0.5 # Multiplier for the exit fee calculation

# ===============================================
# SYSTEM INTERVALS (in seconds)
# ===============================================
STRATEGY_EXECUTION_INTERVAL=600 # Interval for executing trading strategies
HISTORICAL_DATA_UPDATE_INTERVAL=900 # Interval for updating historical data
RISK_CHECK_INTERVAL=60 # Interval for checking risk management conditions
LIVE_PRICE_UPDATE=realtime # Method for live price updates, can be 'realtime' or 'polling'

# ===============================================
# WEBSOCKET SETTINGS
# ===============================================
WEBSOCKET_PORT=8765 # Port for the WebSocket server
WEBSOCKET_TIMEOUT=30 # Timeout for WebSocket connections in seconds

# ===============================================
# NOTIFICATIONS (FastAPI-Mail)
# ===============================================
EMAIL_NOTIFICATIONS_ENABLED=true # Enable or disable email notifications
# FastAPI-Mail configuration for sending emails
FASTAPI_MAIL_USERNAME=test@gamil.com # Email username for FastAPI-Mail
FASTAPI_MAIL_PASSWORD=jaybhaieknumber # Email password for FastAPI-Mail
FASTAPI_MAIL_FROM=test@gamil.com # Email address from which notifications are sent 
FASTAPI_MAIL_FROM_NAME=Trade Buddy By Jay Patel # Name to display in email notifications
FASTAPI_MAIL_PORT=587 # SMTP port for sending emails
FASTAPI_MAIL_SERVER=smtp.gmail.com # SMTP server for sending emails
FASTAPI_MAIL_STARTTLS=true # Use STARTTLS for secure email transmission
FASTAPI_MAIL_SSL_TLS=false  # Use SSL/TLS for secure email transmission

# ===============================================
# ACTIVE STRATEGIES
# ===============================================
STRATEGY_CLASSES=["EMAStrategy"] # List of active trading strategies to be used in the system
TRADING_SYMBOLS=["BTCUSD", "ETHUSD"] # List of trading symbols to be monitored and traded

# ===============================================
# LOGGING
# ===============================================
LOG_LEVEL=INFO