# Professional Trading System Configuration
# Copy this file to .env and fill in your actual values

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=trading_system
MONGODB_TIMEOUT=5

# ===============================================
# BROKER SETTINGS
# ===============================================
BROKER_INITIAL_BALANCE=10000.0
BROKER_MAX_LEVERAGE=5.0
BROKER_TRADING_FEE_PCT=0.001
BROKER_MIN_CONFIDENCE=50.0
BROKER_STOP_LOSS_PCT=0.05
BROKER_TARGET_PCT=0.10
BROKER_MAX_HOLDING_HOURS=48

# ===============================================
# RISK MANAGEMENT
# ===============================================
RISK_MAX_PORTFOLIO_RISK=0.15
RISK_MAX_POSITION_RISK=0.05
RISK_CORRELATION_THRESHOLD=0.7
RISK_CHECK_INTERVAL=5

# ===============================================
# TRADING LIMITS
# ===============================================
DAILY_TRADES_LIMIT=50
MAX_POSITION_SIZE=1000.0
RISK_PER_TRADE=0.02

# ===============================================
# WEBSOCKET SETTINGS
# ===============================================
WEBSOCKET_MAX_RETRIES=5
WEBSOCKET_RECONNECT_DELAY=5
WEBSOCKET_TIMEOUT=30
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# ===============================================
# EMAIL NOTIFICATIONS
# ===============================================
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=your-notification-email@gmail.com

# FastAPI-Mail Settings
FASTAPI_MAIL_USERNAME=your-email@gmail.com
FASTAPI_MAIL_PASSWORD=your-app-password
FASTAPI_MAIL_FROM=your-email@gmail.com
FASTAPI_MAIL_FROM_NAME=Trading Bot
FASTAPI_MAIL_PORT=587
FASTAPI_MAIL_SERVER=smtp.gmail.com
FASTAPI_MAIL_STARTTLS=true
FASTAPI_MAIL_SSL_TLS=false

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log

# ===============================================
# STRATEGY CONFIGURATION
# ===============================================
DUMMY_SYMBOLS=["BTC-USD", "ETH-USD"]
DUMMY_PRICE_CHANGE_RANGE=0.02
TRADING_LOOP_INTERVAL=5
STRATEGY_CLASSES=["EMAStrategy"]
MAX_BACKGROUND_WORKERS=4
TASK_QUEUE_SIZE=1000
PRICE_UPDATE_INTERVAL=1

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
# Set to 'production' for production environment
ENVIRONMENT=development

# Enable debug mode (set to false in production)
DEBUG=true

# API Keys and Secrets (if using real exchange APIs)
# EXCHANGE_API_KEY=your-api-key
# EXCHANGE_API_SECRET=your-api-secret
# EXCHANGE_PASSPHRASE=your-passphrase

# ===============================================
# WEBSOCKET SERVER SETTINGS
# ===============================================
WEBSOCKET_SERVER_HOST=localhost
WEBSOCKET_SERVER_PORT=8765
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_MESSAGE_QUEUE_SIZE=100
WEBSOCKET_RATE_LIMIT_PER_MINUTE=60

# ===============================================
# SECURITY SETTINGS
# ===============================================
# JWT secret for API authentication (generate a secure random string)
# JWT_SECRET_KEY=your-super-secret-jwt-key
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# ===============================================
# MONITORING & ALERTING
# ===============================================
# Enable system monitoring
MONITORING_ENABLED=true

# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=60
MEMORY_CHECK_INTERVAL=300

# Alert thresholds
MEMORY_USAGE_THRESHOLD_MB=1000
ERROR_COUNT_THRESHOLD=10
CPU_USAGE_THRESHOLD=80

# ===============================================
# PERFORMANCE TUNING
# ===============================================
# Connection pool settings
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30

# Cache settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Threading settings
STRATEGY_THREAD_POOL_SIZE=4
NOTIFICATION_THREAD_POOL_SIZE=2

# ===============================================
# BACKUP & MAINTENANCE
# ===============================================
# Automatic data cleanup (days)
DATA_RETENTION_DAYS=90

# Backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30